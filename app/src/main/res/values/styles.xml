<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar Title Style -->
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Card Styles -->
    <style name="ContentCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <style name="ElevatedCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <!-- Base Button Style -->
    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="BaseButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Outline Button Style -->
    <style name="OutlineButton" parent="BaseButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">#1A1A1A</item>
    </style>
</resources>
