<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/gameToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#1A1A1A"
        app:title="@string/game_toolbar_title"
        app:titleTextColor="#1A1A1A"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Player Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/gameHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/gameToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Player Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_player_label"
                    android:textSize="10sp"
                    android:textColor="#757575"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/gamePlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_player_name_placeholder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Record -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_record_label"
                    android:textSize="10sp"
                    android:textColor="#757575"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/gameRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_record_placeholder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Game Canvas -->
    <FrameLayout
        android:id="@+id/gameCanvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/gameHeaderCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Score Display -->
        <TextView
            android:id="@+id/gameScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:text="0"
            android:textSize="72sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-black" />

        <!-- Messi Face (controlled by touch) -->
        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/gameMessiFace"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/game_face_description"
            app:svg="@raw/messi_icon" />

        <!-- Game Over Overlay -->
        <FrameLayout
            android:id="@+id/gameOverOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E6000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Icon -->
                    <com.caverock.androidsvg.SVGImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="24dp"
                        android:alpha="0.3"
                        android:contentDescription="@string/game_face_description"
                        app:svg="@raw/messi_icon" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/gameOverTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡Perdiste!"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="12dp" />

                    <!-- Score -->
                    <TextView
                        android:id="@+id/gameOverScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntaje: 0"
                        android:textSize="28sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="32dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="32dp" />

                    <!-- Question -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Quieres volver a jugar?"
                        android:textSize="20sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <!-- Restart Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/restartButton"
                        style="@style/PrimaryButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Jugar de nuevo"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <!-- Exit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/exitButton"
                        style="@style/OutlineButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Salir"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Game objects will be added dynamically here -->
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
