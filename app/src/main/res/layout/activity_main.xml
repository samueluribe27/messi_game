<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_main_gradient"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Header Card con información del jugador -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="26dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_welcome_title"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.025"
                    android:layout_marginBottom="22dp" />

                <!-- Stats Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Player Name Chip -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F8F8F8">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_player_label"
                                android:textSize="10sp"
                                android:textColor="#757575"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:fontFamily="sans-serif-medium" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="6dp">

                                <TextView
                                    android:id="@+id/playerNameValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_player_name_placeholder"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="sans-serif-medium"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:letterSpacing="-0.01" />

                                <ImageView
                                    android:id="@+id/editPlayerNameIcon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="8dp"
                                    android:src="@android:drawable/ic_menu_edit"
                                    android:contentDescription="Editar nombre"
                                    app:tint="#757575"
                                    android:alpha="0.7" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Record Chip -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F8F8F8">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_record_label"
                                android:textSize="10sp"
                                android:textColor="#757575"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/recordValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_record_placeholder"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="6dp"
                                android:letterSpacing="-0.01" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Canvas con iconos SVG -->
        <androidx.cardview.widget.CardView
            android:id="@+id/facesCanvas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="280dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FCFCFC">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="28dp">

                <!-- SVG Icons distribuidos -->
                <com.caverock.androidsvg.SVGImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|start"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:alpha="0.32"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />

                <com.caverock.androidsvg.SVGImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.28"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />

                <com.caverock.androidsvg.SVGImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:alpha="0.45"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />

                <com.caverock.androidsvg.SVGImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />

                <com.caverock.androidsvg.SVGImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.34"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />

                <com.caverock.androidsvg.SVGImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="16dp"
                    android:alpha="0.26"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />

                <com.caverock.androidsvg.SVGImageView
                    android:id="@+id/faceBottomEnd"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="14dp"
                    android:alpha="0.28"
                    android:contentDescription="@string/home_face_content_description"
                    app:svg="@raw/messi_icon" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botón Jugar (Primary) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="@string/home_play_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:backgroundTint="#1A1A1A"
                app:cornerRadius="20dp"
                android:layout_marginBottom="12dp"
                app:elevation="6dp" />

            <!-- Botón Puntajes -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/scoresButton"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="@string/home_scores_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#1A1A1A"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:layout_marginBottom="12dp"
                app:elevation="3dp" />

            <!-- Botón Créditos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/creditsButton"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="@string/home_credits_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#1A1A1A"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                app:elevation="3dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
