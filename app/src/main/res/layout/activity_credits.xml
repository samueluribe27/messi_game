<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_main_gradient"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar minimalista -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/creditsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingStart="12dp"
            android:paddingEnd="20dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#1A1A1A"
            app:title="@string/credits_toolbar_title"
            app:titleTextColor="#1A1A1A"
            app:titleTextAppearance="@style/ToolbarTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="32dp">

            <!-- Player Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/creditsHeaderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="26dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/credits_title"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.025"
                        android:layout_marginBottom="22dp" />

                    <!-- Stats Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Player Name Chip -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F8F8F8">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_player_label"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.1"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/creditsPlayerNameValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_player_name_placeholder"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="6dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:letterSpacing="-0.01" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Record Chip -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F8F8F8">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_record_label"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.1"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/creditsRecordValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_record_placeholder"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="6dp"
                                    android:letterSpacing="-0.01" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Credits Content Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/creditsContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FCFCFC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- SVG decorativo superior -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <com.caverock.androidsvg.SVGImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:alpha="0.22"
                            android:contentDescription="@string/home_face_content_description"
                            app:svg="@raw/messi_icon" />
                    </FrameLayout>

                    <!-- Section: Development -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESARROLLO DE APLICACIÓN"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.12"
                        android:layout_marginBottom="14dp" />

                    <!-- Developer Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="22dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credits_developer_name_samuel"
                                android:textSize="21sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credits_developer_role"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Section: Design -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DISEÑO UI/UX"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.12"
                        android:layout_marginBottom="14dp" />

                    <!-- Designer Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="22dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credits_developer_name_jose"
                                android:textSize="21sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="-0.01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credits_designer_role"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- SVG decorativo inferior -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.caverock.androidsvg.SVGImageView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="end"
                            android:alpha="0.18"
                            android:contentDescription="@string/home_face_content_description"
                            app:svg="@raw/messi_icon" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
